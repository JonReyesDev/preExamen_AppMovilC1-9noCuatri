<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNumRecibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Recibo"
        android:inputType="number" />

    <EditText
        android:id="@+id/etHorasNormales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas Normales"
        android:inputType="number" />

    <EditText
        android:id="@+id/etHorasExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas Extra"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Puesto (1: Auxiliar, 2: Albañil, 3: Ing. Obra)"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPorcentajeImpuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porcentaje de Impuesto"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

</LinearLayout>
